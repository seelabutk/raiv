{
	"manifest_version": 3,
	"name": "RAIV",
	"description": "Capture and record UI interactions for easy sharing.",
	"version": "0.0.0",
	"background": {
		"service_worker": "/background.js"
	},
	"action": {
		"default_popup": "popup.html"
	},
	"content_scripts": [
		{
			"matches": [
				"<all_urls>"
			],
			"js": [
				"/recorder.js"
			]
		}
	],
	"web_accessible_resources": [{
		"matches": [
			"<all_urls>"
		],
		"resources": [
			"/recorder.html"
		]
	}]
}
