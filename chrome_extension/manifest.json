{
  "manifest_version": 3,
  "name": "RAIV",
  "version": "0.0.0",

  "description": "Capture and record UI interactions for easy sharing.",
  "icons": {
    "16": "icons/loom_16.png",
    "32": "icons/loom_32.png",
    "48": "icons/loom_48.png",
    "128": "icons/loom_128.png"
  },

  "host_permissions": ["*://*/*"],
  "permissions": [
    "activeTab",
    "scripting"
  ],

  "background": {
    "service_worker": "js/recorder_service.js",
    "type": "module"
  },

  "content_scripts": [{
    "matches": ["*://*/*"],
    "js": ["js/recorder.js"]
  }],

  "action": {
    "default_popup": "index.html"
  }
}
