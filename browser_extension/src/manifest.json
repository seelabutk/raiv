{
	"manifest_version": 3,
	"name": "RAIV",
	"description": "Capture and record UI interactions for easy sharing.",
	"version": "0.0.0",
	"background": {
		"service_worker": "/background.js"
	},
	"action": {
		"default_icon": "/icons/video-solid.svg"
	},
	"permissions": [
		"activeTab",
		"scripting"
	],
	"web_accessible_resources": [{
		"matches": ["<all_urls>"],
		"resources": ["/icons/*.svg"]
	}]
}
